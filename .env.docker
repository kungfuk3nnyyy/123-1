
# Docker Environment Configuration
# Copy this to .env for docker setup

# Application URLs
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-production-nextauth-secret-change-this-in-production

# Database Configuration (Docker Compose)
DATABASE_URL=postgresql://gigsecure_user:gigsecure_password@postgres:5432/gigsecure

# Paystack API Configuration
PAYSTACK_SECRET_KEY=your-paystack-secret-key-here
PAYSTACK_PUBLIC_KEY=your-paystack-public-key-here



# Cron Job Secret
CRON_SECRET=your-cron-secret-key-change-this-in-production

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password-here

# Redis Configuration (Optional)
REDIS_URL=redis://redis:6379

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_DIR=/app/uploads

# Security Configuration
BCRYPT_ROUNDS=12
JWT_SECRET=your-jwt-secret-change-this-in-production

# Application Configuration
NODE_ENV=production
PORT=3000
HOSTNAME=0.0.0.0
